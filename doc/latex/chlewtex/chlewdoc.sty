\definecolor{cmdred}{rgb}{0.6,0,0}
\definecolor{envirored}{rgb}{0.8,0.2,0}
\definecolor{packblue}{rgb}{0,0,0.6}
\definecolor{optgreen}{rgb}{0,0.6,0}
\definecolor{filecyan}{rgb}{0,0.4,0.6}
\definecolor{classblue}{rgb}{0.2,0,0.6}
%
\newcommand\bscomm[1]{\texttt{\color{cmdred}\symbol{92}#1}}
\newcommand\dotext[1]{\texttt{\color{filecyan}.#1}}
\newcommand\makesc[1]{\textsc{\MakeLowercase{#1}}}
\newcommand\packstyle[1]{\texttt{\color{packblue}#1}}
\newcommand\classstyle[1]{\texttt{\color{classblue}#1}}
\newcommand\filestyle[1]{\texttt{\color{filecyan}#1}}
\newcommand\optstyle[1]{\texttt{\color{optgreen}#1}}
\newcommand\envirostyle[1]{\texttt{\color{envirored}#1}}
%
\newindextwo{class}[\classstyle]{clase}
\newindextwo{package}[\packstyle]{paquete}
\newindextwo{file}[\filestyle]{archivo}
\newindextwo{fileext}[\dotext]{extensión de archivo}
\newindextwo{option}[\optstyle]{opci\'on}
\newindextwo{enviro}[\envirostyle]{entorno}
\newindextwo{command}[\bscomm]{comando}
%
\newindextwo{OS}[\textsc]{sistema operativo}
\newindexone{acro}[\makesc]
%
\newcommand\univ[1]{\entryindextwo*{#1}{Universidad}}
%
\newindexed{chlewtex}[ChlewTeX]{\textit{Chlew}\hspace{-.3ex}\protect\TeX}
%
\newcommand\var[1]{\textit{#1}}
\newcommand\fxvar[1]{\texttt{\color{cmdred}\{}\var{#1}\texttt{\color{cmdred}\}}}
\newcommand\opvar[1]{\texttt{\color{cmdred}[}\var{#1}\texttt{\color{cmdred}]}}
%
\newcommand\@status[1][\@empty]{\ifx\@empty#1\relax\else{\footnotesize\\Status: \itshape #1}\fi}
\newcommand\declarepackage[2][\@empty]{\package{#2}\marginpar{\package*{#2}\@status[#1]}}
\newcommand\declarecommand[2][\@empty]{\command{#2}\marginpar{\command*{#2}\@status[#1]}}
\newcommand\declareoption[2][\@empty]{\option{#2}\marginpar{\option*{#2}\@status[#1]}}
\newcommand\declareenviro[2][\@empty]{\enviro{#2}\marginpar{\enviro*{#2}\@status[#1]}}
\newcommand\declareclass[2][\@empty]{\class{#2}\marginpar{\class*{#2}\@status[#1]}}
\newcommand\declarefile[2][\@empty]{\file{#2}\marginpar{\file*{#2}\@status[#1]}}
\newcommand\declareetc{etc\marginpar{\ldots}}
