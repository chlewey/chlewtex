\newcommand\makehalftitle{%
  \thispagestyle{empty}
  \vspace*{\fill}
  \begin{adjustwidth}{60pt}{60pt}
  \begin{center}
  \HUGE\sffamily\bfseries\thetitle
  \end{center}
  \end{adjustwidth}2
  \vspace*{\fill}
}
\renewcommand\maketitle{%
  \cleardoublepage
  \thispagestyle{empty}
  \vspace*{\fill}
  \begin{adjustwidth}{60pt}{60pt}
  \begin{center}
  \HUGE\sffamily\bfseries\thetitle
  \end{center}
  \end{adjustwidth}
  \begin{adjustwidth}{30pt}{30pt}
  \begin{center}
  \LARGE\sffamily\bfseries\thesubtitle
  \end{center}
  \begin{center}
  \LARGE\sffamily\theauthor
  \end{center}
  \end{adjustwidth}
  \vspace*{\fill}
}

